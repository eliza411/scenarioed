{% extends "::base.html.twig" %}
    {% block title %}Feature: {{ feature.title }}{% endblock %}

    {% block body %}
        <h1><span class="prepend">Feature: </span> {{ feature.title }}</h1>
        <a href="{{ path('project_feature_show', { 'project_id': project.id, 'file': feature.file }) }}" class="action back">&larr; Feature</a>

        <form action="{{ path('project_feature_update', { 'project_id': project.id, 'file': feature.file }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <button type="submit" class="action save">Save</button>
        </form>

        <form action="{{ path('project_feature_delete', { 'project_id': project.id, 'file': feature.file }) }}" method="post">
            {{ form_widget(delete_form) }}
                <button type="submit" class="action delete">Delete</button>
        </form>
{% endblock %}
