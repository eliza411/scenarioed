{% extends "::base.html.twig" %}
    {% block title %}Feature: {{ feature.file }}{% endblock %}

    {% block body %}
    <h1>{{ block('title') }}</h1>

    <form action="{{ path('project_feature_update', { 'project_id': project.id, 'file': feature.file }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('project_feature_show', { 'project_id': project.id, 'file': feature.file }) }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('project_feature_delete', { 'project_id': project.id, 'file': feature.file }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
